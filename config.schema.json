{
  "pluginAlias": "EnviroplusAirQuality",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "The Pimoroni Enviro+ Sensor for the Raspberry Pi provides environmental data.",
  "schema": {
    "type": "object",
    "properties": {
      "server": {
        "title": "MQTT Broker",
        "type": "string",
        "required": true,
        "format": "uri",
        "default": "mqtt://127.0.0.1:1883"
      },
      "topic": {
        "title": "MQTT Topic",
        "type": "string",
        "required": true,
        "format": "string",
        "default": "enviro"
      },
      "username": {
        "title": "MQTT Broker username",
        "type": "string",
        "required": true,
        "default": "enviropi"
      },
      "password": {
        "title": "MQTT Broker password",
        "type": "string",
        "required": true,
        "default": "9jWTXMioQmidgNpcQD6iGWXftkptHF"
      },
      "serial": {
        "title": "Enviro+ Serial Number",
        "type": "string",
        "required": true,
        "default": "1234567890"
      },
      "excellent": {
        "title": "The upper value for PM2.5 air quality considered to be excellent (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 10
      },
      "good": {
        "title": "The upper value for PM2.5 air quality considered to be good (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 20
      },
      "fair": {
        "title": "The upper value for PM2.5 air quality considered to be fair (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 25
      },
      "inferior": {
        "title": "The upper value for PM2.5 air quality considered to be inferior (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 50
      },
      "poor": {
        "title": "The lowest value for PM2.5 air quality considered to be poor (in micrograms per cubic metre). Anything above this is included.",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 50
      },
      "COWarningLevel": {
        "title": "Carbon Monoxide warning level. A number higher than this is considered abnormal.",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 30
      }
    }
  }
}
