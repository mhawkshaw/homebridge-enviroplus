{
  "pluginAlias": "EnviroplusAirQuality",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "headerDisplay": "The Pimoroni Enviro+ Sensor for the Raspberry Pi provides environmental data.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Plugin name as shown in Homebridge Log",
        "default": "EnviroPlus"
      },
      "mqttbroker": {
        "title": "MQTT Broker",
        "type": "string",
        "required": true,
        "format": "uri",
        "default": "mqtt://127.0.0.1:1883"
      },
      "username": {
        "title": "MQTT Broker username",
        "type": "string",
        "required": false,
        "default": ""
      },
      "password": {
        "title": "MQTT Broker password",
        "type": "string",
        "required": false,
        "default": ""
      },
      "devices": {
        "title": "Enviro+ Devices",
        "type": "array",
        "uniqueItems": true,
        "required": true,
        "items": {
          "title": "Devices",
          "type": "object",
          "required": true,
          "properties": {
            "displayName": {
              "title": "Enviro+ Display Name",
              "type": "string",
              "required": true,
              "default": ""
            },
            "serial": {
              "title": "Enviro+ Serial Number",
              "type": "string",
              "required": true,
             "default": "1234567890"
            },
            "topic": {
              "title": "MQTT Topic",
              "type": "string",
              "required": true,
              "format": "string",
              "default": "enviro"
            }
          }
        }
      },
      "excellent": {
        "title": "The upper value for PM2.5 air quality considered to be excellent (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 10
      },
      "good": {
        "title": "The upper value for PM2.5 air quality considered to be good (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 20
      },
      "fair": {
        "title": "The upper value for PM2.5 air quality considered to be fair (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 25
      },
      "inferior": {
        "title": "The upper value for PM2.5 air quality considered to be inferior (in micrograms per cubic metre)",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 50
      },
      "poor": {
        "title": "The lowest value for PM2.5 air quality considered to be poor (in micrograms per cubic metre). Anything above this is included.",
        "type": "integer",
        "required": true,
        "minimum": 0,
        "maximum": 1000,
        "default": 50
      }
    }
  }
}
